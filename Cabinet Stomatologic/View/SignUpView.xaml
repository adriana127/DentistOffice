<UserControl x:Class="Cabinet_Stomatologic.View.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cabinet_Stomatologic.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="45" Margin="305,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235"/>
        <TextBox Text="{Binding Password,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="45" Margin="305,285,0,0"  VerticalAlignment="Top" Width="235"/>
        <Label Foreground="Black" Content="User" HorizontalAlignment="Left" Margin="305,105,0,0" VerticalAlignment="Top" Height="45" Width="180"/>
        <Label Foreground="Black" Content="Parola" HorizontalAlignment="Left" Margin="305,235,0,0" VerticalAlignment="Top" Height="45" Width="180"/>

        <Button Command="{Binding Save}" Content="Save" HorizontalAlignment="Left" Margin="380,475,0,0" VerticalAlignment="Top" Width="110" Height="39"/>

    </Grid>
</UserControl>
